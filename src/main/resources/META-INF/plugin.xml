<idea-plugin>
    <id>com.example.versioningplugin</id>
    <name>AutoVersion Mini</name>
    <vendor email="your.email@example.com" url="http://example.com">Your Name</vendor>

    <!-- 注册 projectComponent -->
    <project-components>
        <component>
            <implementation-class>com.github.wangtk311.plugintest.MyProjectComponent</implementation-class>
        </component>
    </project-components>

    <!-- 注册 ToolWindow -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="AutoVersion Mini" factoryClass="com.github.wangtk311.plugintest.toolWindow.VersionToolWindowFactory" anchor="left"/>
    </extensions>
</idea-plugin>
